
namespace SimpleProblems
{
    public class IndentifyLargestTwoNumbers
    {
        #region Methods

        /// <summary>
        /// Finds the largest two numbers in an array
        /// </summary>
        /// <param name="array">array with int values</param>
        /// <returns>array with largest two numbers; int[0] - largest number; int[1] - second largers number</returns>
        public int[] CalcLargestTwoNumbers(int[] array)
        {
            int[] resultArray = new int[2] { 0, 0 };
            int pivotValue;

            //check if array is not null and if it has elements
            if (array != null && array.Length > 0)
            {
                for (int i = 0; i < array.Length; i++)
                {
                    //if the current iterated number is bigger than the current biggest number
                    if (array[i] > resultArray[0])
                    {
                        //save the current biggest number in a temp variable
                        pivotValue = resultArray[0];

                        //current iterated number becomes the current biggest number
                        resultArray[0] = array[i];

                        //the previous biggest number becomes the 2nd biggest number
                        resultArray[1] = pivotValue;
                    }
                    //if the current iterated number is bigger than the current 2nd biggest number
                    else if (array[i] > resultArray[1])
                    {
                        //current iterated number becomes the 2nd biggest number
                        resultArray[1] = array[i];
                    }
                }
            }

            return resultArray;
        }

        #endregion
    }
}
